




class Solution:
    def findMedianSortedArrays(self, list1, list2):
        len1 = len(list1)
        len2 = len(list2)
        ptr1 = 0
        ptr2 = 0
        val1 = 0
        val2 = 0

        total_len = len1 + len2
        half = total_len // 2

        for _ in range(half + 1):
            val2 = val1
            if ptr1 < len1 and ptr2 < len2:
                if list1[ptr1] <= list2[ptr2]:
                    val1 = list1[ptr1]
                    ptr1 += 1
                else:
                    val1 = list2[ptr2]
                    ptr2 += 1
            elif ptr1 < len1:
                val1 = list1[ptr1]
                ptr1 += 1
            else:
                val1 = list2[ptr2]
                ptr2 += 1

        if total_len % 2 == 0:
            return (val1 + val2) / 2.0
        else:
            return float(val1)
